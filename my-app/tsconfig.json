{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonJS",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist"]
}
